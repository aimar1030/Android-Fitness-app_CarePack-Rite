<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.pooja.carepack.utils.CircleImageView
        android:id="@+id/row_search_user_ivUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:src="@drawable/ic_person"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/row_search_user_ivUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:text="John"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>


        <TextView
            android:id="@+id/row_search_user_ivUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="john@gmail.com"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/row_search_user_ivUserStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_add_friend"/>



</LinearLayout>