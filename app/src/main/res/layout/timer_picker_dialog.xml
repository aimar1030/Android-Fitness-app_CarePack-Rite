<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hours"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Minutes"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Seconds"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <com.rey.material.widget.LinearLayout
            android:id="@+id/choose_actiivyt_dialog_llWalk"
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/timer_picker_dialog_tvHours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:text="00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />

        </com.rey.material.widget.LinearLayout>

        <com.rey.material.widget.LinearLayout
            android:id="@+id/choose_actiivyt_dialog_llRun"
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/timer_picker_dialog_tvMinutes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:text="00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />
        </com.rey.material.widget.LinearLayout>

        <com.rey.material.widget.LinearLayout
            android:id="@+id/choose_actiivyt_dialog_llCycle"
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/timer_picker_dialog_tvSeconds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:text="00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />

        </com.rey.material.widget.LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.rey.material.widget.Button
            android:id="@+id/timer_picker_dialog_btnOK"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/btn_pressed"
            android:gravity="center"
            android:text="OK"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <com.rey.material.widget.Button
            android:id="@+id/timer_picker_dialog_btnCancle"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/btn_pressed"
            android:gravity="center"
            android:text="CANCLE"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>